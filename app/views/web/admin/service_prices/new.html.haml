= simple_form_for @service_price, url: admin_service_prices_path do |f|
  = f.input :price
  = f.input :city_id, collection: City.all
  = f.input :company_id, collection: Company.all
  = f.input :service_id, collection: Service.all
  = f.button :submit, class: 'btn btn-info'
  = link_to t('cancel'), admin_service_prices_path, :class => "btn btn-info"
