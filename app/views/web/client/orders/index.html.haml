%table.table
  %tr.table-info
    %th= Order.human_attribute_name(:id)
    %th= Order.human_attribute_name(:name)
    %th= Order.human_attribute_name(:email)
    %th= Order.human_attribute_name(:role)
    %th= Order.human_attribute_name(:state)
    %th= t('control')
  - @orders.each do |order|
    %tr.bg-success
      %td=order.id
      %td=order.service.name
      %td=order.company.name
      -# - order.company.service_prices.each do |service_price, key|
      -#   %td=service_price.price
      %td=link_to t('.view order'), client_order_path(order)
.btn.btn-light
  = link_to t('.back'), client_profile_path, :class => "btn btn-info"
.btn.btn-light
  = link_to t('.create new'), new_client_order_path, :class => "btn btn-info"

